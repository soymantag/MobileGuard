<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_splash_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activities.SplashActivity">

    <TextView
        android:id="@+id/tv_center_SplashActivity"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="center"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/m2"
        android:src="@mipmap/splash_g"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@id/tv_center_SplashActivity"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_splash_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:text="chrisç‰ˆ"/>
    <ImageView
        android:id="@+id/m3"
        android:src="@mipmap/spalsh_mobileguard"
        android:layout_above="@id/tv_splash_version_name"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ProgressBar
        android:layout_above="@id/m3"
        android:id="@+id/pb_splashActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ProgressBar
        android:visibility="visible"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pb_splash_download_progress"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>
